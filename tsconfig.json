{
    "compilerOptions": {
        "outDir": "dist",
        "module": "CommonJS",
        "target": "ES6",
        "rootDir": "src",
        "allowJs": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveSymlinks": true
    },
    "exclude": [
        "babel.config.js",
        "jest.config.ts",
        "rollup.config.js",
        "coverage/**/*",
        "demo/**/*",
        "dist/**/*",
        "interactive-tests/js/**/*",
        "tests/**/*"
    ]
}